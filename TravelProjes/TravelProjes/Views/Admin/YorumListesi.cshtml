@using TravelProjes.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="text-center">Yorum Listesi</h3>
<table class="table table-bordered" style="background-color:antiquewhite">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {

    
    <tr>
        <td>@x.ID</td>
        <td>@x.KullaniciAdi</td>
        <td>@x.Mail</td>
        <td>@x.Yorum</td>
        <td>@x.Blog.Baslik</td>
        <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>

